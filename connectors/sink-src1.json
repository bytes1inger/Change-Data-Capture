{
    "name": "jdbc-sink-src1",
    "config": {
      "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
      "connection.url": "jdbc:postgresql://postgres-dest:5432/unifieddb",
      "connection.user": "postgres",
      "connection.password": "postgres",
  
      "topics.regex": "src1\\.public\\.(users|orders)",
  
      "auto.create": "false",
      "auto.evolve": "true",
  
      "insert.mode": "upsert",
      "delete.enabled": "true",
      "pk.mode": "record_value",
      "pk.fields": "id,source",
  
      "transforms": "unwrap,routeUsers,routeOrders,addSource",
      "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
      "transforms.unwrap.drop.tombstones": "true",
      "transforms.unwrap.delete.handling.mode": "rewrite",
  
      "transforms.routeUsers.type": "org.apache.kafka.connect.transforms.RegexRouter",
      "transforms.routeUsers.regex": "src1\\.public\\.users",
      "transforms.routeUsers.replacement": "users",
  
      "transforms.routeOrders.type": "org.apache.kafka.connect.transforms.RegexRouter",
      "transforms.routeOrders.regex": "src1\\.public\\.orders",
      "transforms.routeOrders.replacement": "orders",
  
      "transforms.addSource.type": "org.apache.kafka.connect.transforms.InsertField$Value",
      "transforms.addSource.static.field": "source",
      "transforms.addSource.static.value": "SRC1"
    }
  }
  